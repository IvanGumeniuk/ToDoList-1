<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameTextViewFinished"
            style="@style/ItemTextViewLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_name_view"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/ExpiredTaskColor"/>
        <TextView
            android:id="@+id/descriptionTextViewFinished"
            style="@style/ItemTextViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ExpiredTaskColorBackground"
            android:text="@string/text_description_view"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/colorDescriptionBlack"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/subTaskCountContainerFinished">
        <ImageView
            android:background="@drawable/circle"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/subTaskCountFinished"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </FrameLayout>
</LinearLayout>
